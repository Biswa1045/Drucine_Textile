<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_height="475dp">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cancel_dailog"
                    android:padding="2dp"
                    android:src="@drawable/close"/>

            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Address"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/prim"
                />

           <LinearLayout
               android:layout_marginTop="45dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"

                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Name"
                       android:layout_weight="1"
                       android:textSize="18dp"
                       android:layout_gravity="center_vertical"
                       android:textColor="#A6000000"
                       android:textStyle="bold"/>
                   <EditText
                       android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                       android:id="@+id/name"
                       android:background="@drawable/stk"
                       android:textSize="16dp"
                       android:textColor="#000000"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"

                   android:layout_marginTop="15dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Hostel Name"
                       android:layout_gravity="center_vertical"
                       android:textSize="18dp"
                       android:textColor="#A6000000"
                       android:textStyle="bold"/>
                   <EditText
                       android:id="@+id/hostel_name"
                       android:textSize="16dp"
                       android:layout_marginLeft="3dp"
                       android:background="@drawable/stk"
                       android:layout_weight="1"
                       android:textColor="#000000"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"

                   android:layout_marginTop="15dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Room no"
                       android:layout_weight="1"
                       android:textSize="18dp"
                       android:layout_gravity="center_vertical"
                       android:textColor="#A6000000"
                       android:textStyle="bold"/>
                   <EditText
                       android:textSize="16dp"
                       android:background="@drawable/stk"
                       android:id="@+id/room_no"
                       android:textColor="#000000"
                       android:layout_marginLeft="3dp"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"

                   android:layout_marginTop="15dp"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="Contact No"
                       android:layout_gravity="center_vertical"
                       android:textSize="18dp"
                       android:textColor="#A6000000"
                       android:textStyle="bold"/>
                   <EditText
                       android:textSize="16dp"
                       android:id="@+id/contno"
                       android:layout_weight="1"
                       android:textColor="#000000"
                       android:background="@drawable/stk"
                       android:layout_marginLeft="3dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       />
               </LinearLayout>
               <androidx.cardview.widget.CardView
                   android:layout_width="95dp"
                   android:layout_height="35dp"
                   android:backgroundTint="#4CAF50"
                   app:cardCornerRadius="12dp"
                   android:id="@+id/save"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="30dp"
                   >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="  Save  "
                       android:textSize="22dp"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textStyle="bold"/>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Your Address is not share with any other person."
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="5dp"
                   android:textColor="#88000000"/>
           </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

