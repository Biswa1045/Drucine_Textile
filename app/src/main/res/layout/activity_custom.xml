<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".CustomActivity">


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_custom"
            android:layout_width="30dp"
            android:backgroundTint="@color/black"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ScrollView
        android:layout_above="@+id/buttom_custom"
        android:layout_below="@+id/toolbar_custom"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/stk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_margin="10dp"

                    android:layout_marginLeft="5dp"
                    android:id="@+id/custom_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"


                            android:layout_height="match_parent"
                            android:padding="5dp"

                            android:src="@drawable/info"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:text="Size"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    android:elevation="5dp"
                    android:layout_margin="10dp"

                    android:id="@+id/custom_printarea"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"

                            android:src="@drawable/info"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:text="Print Area"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:elevation="5dp"
                    android:layout_margin="10dp"

                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/custom_exm"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"

                            android:src="@drawable/info"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:text="Example"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="5dp">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:id="@+id/calldirect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/document"/>
                            <TextView
                                android:id="@+id/custom_upload"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="Order Jersey/Team T-shirts"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>
                        <ImageView
                            android:id="@+id/custom_upload_check"
android:elevation="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:id="@+id/img1_l"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/stk"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:id="@+id/img1"
                                    android:layout_height="50dp"
                                    android:src="@drawable/add"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:text="Upload Your Design file(Png,jpg,svg,xd)"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="12dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/img2_l"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/stk"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ImageView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:id="@+id/img2"
                                    android:layout_height="50dp"
                                    android:src="@drawable/add"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:text="Upload image used in design (marge all image in one file )"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="12dp"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Style"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <Spinner

                            android:background="@drawable/stk"
                            android:layout_weight="1"
                            android:id="@+id/style_spinner"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Print Type"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <Spinner
                            android:id="@+id/printtype_spinner"

                            android:layout_gravity="center_vertical"
                            android:background="@drawable/stk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Material"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <Spinner
                            android:id="@+id/material_spinner"
                            android:background="@drawable/stk"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>
                        <Spinner
                            android:id="@+id/size_spinner"
                            android:background="@drawable/stk"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>

                        <EditText
                            android:layout_width="match_parent"

                            android:background="@drawable/stk"
                            android:layout_height="30dp"
                            android:text="1"
                            android:id="@+id/quantity_custom"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center_horizontal"
                     android:orientation="horizontal">
                     <CheckBox
                         android:layout_width="wrap_content"
                         android:textStyle="bold"
                         android:layout_weight="1"

                         android:id="@+id/frontprint_chk"
                         android:textColor="@color/black"
                         android:layout_height="wrap_content"
                         android:textSize="18dp"
                         android:checked="true"
                         android:text="front print"/>
                     <CheckBox
                         android:layout_width="wrap_content"
                         android:layout_weight="1"
                         android:textStyle="bold"
                         android:id="@+id/backprint_chk"
                         android:layout_height="wrap_content"
                         android:textColor="@color/black"
                         android:textSize="18dp"
                         android:text="back print"/>
                     <CheckBox
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:id="@+id/sideprint_chk"
                         android:textSize="18dp"
                         android:textColor="@color/black"
                         android:textStyle="bold"
                         android:text="side print"/>
                 </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/stk"
                        android:layout_height="50dp"
                        android:text="1"
                        android:id="@+id/remark_custom"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:padding="5dp"

                        android:textColor="@color/black"/>




                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                       android:backgroundTint="@color/prim"
                        android:layout_height="30dp"
                        app:cardCornerRadius="5dp"
                        android:id="@+id/checkprice"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Check Price"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="18dp"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_weight="0.1"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textSize="20dp"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/price_custom"
                            android:layout_marginLeft="25dp"
                            android:textColor="@color/black"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttom_custom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#4CAF50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add To Cart"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>